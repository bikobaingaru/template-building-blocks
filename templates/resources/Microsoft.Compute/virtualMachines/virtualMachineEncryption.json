{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "deploymentContext": {
            "type": "object"
        },
        "source": {
            "type": "object"
        },
        "bekUrl": {
            "type": "string"
        }
    },
    "variables": {
        "templateUniqueString": "[uniqueString(concat(string(parameters('deploymentContext')), string(parameters('source')), string(parameters('bekUrl'))))]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "name": "[concat(parameters('deploymentContext').parentTemplateUniqueString, '-', variables('source').name, '-encrypt-', variables('templateUniqueString'))]",
            "resourceGroup": "[variables('source').resourceGroupName]",
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {},
                    "resources": [
                        {
                            "apiVersion": "2016-04-30-preview",
                            "type": "Microsoft.Compute/virtualMachines",
                            "name": "variables('source').name",
                            "properties": {
                                "storageProfile": {
                                    "osDisk": {
                                        "encryptionSettings": {
                                            "diskEncryptionKey": {
                                                "sourceVault": {
                                                    "id": "[variables('source').encryptionSettings.bekKeyVault]"
                                                },
                                                "secretUrl": "[parameters('bekUrl')]"
                                            },
                                            "keyEncryptionKey": {
                                                "sourceVault": {
                                                    "id": "[variables('source').encryptionSettings.kekKeyVault]"
                                                },
                                                "keyUrl": "[variables('source').encryptionSettings.kekUrl]"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    ]
                }
            }
        }
    ]
}