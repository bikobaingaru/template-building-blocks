{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "deploymentContext": {
            "type": "object"
        },
        "source": {
            "type": "object"
        }
    },
    "variables": {
        "templateUniqueString": "[uniqueString(concat(string(parameters('deploymentContext')), string(parameters('source'))))]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "name": "[concat(parameters('deploymentContext').parentTemplateUniqueString, '-', variables('source').name, '-ref-', variables('templateUniqueString'))]",
            "resourceGroup": "[variables('source').resourceGroupName]",
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {},
                    "resources": [
                    ],
                    "outputs": {
                        "bekUrl": {
                            "type": "string",
                            "value": "[reference(resourceId('Microsoft.Compute/virtualMachines/extensions',  parameters('source').name, 'AzureDiskEncryption')).instanceView.statuses[0].message]"
                        }
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "name": "[concat(parameters('deploymentContext').parentTemplateUniqueString, '-', variables('source').name, '-encrypt-', variables('templateUniqueString'))]",
            "resourceGroup": "[variables('source').resourceGroupName]",
            "dependsOn": [
                "[concat(parameters('deploymentContext').parentTemplateUniqueString, '-', variables('source').name, '-ref-', variables('templateUniqueString'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {},
                    "resources": [
                        {
                            "apiVersion": "2016-04-30-preview",
                            "type": "Microsoft.Compute/virtualMachines",
                            "name": "variables('source').name",
                            "properties": {
                                "storageProfile": {
                                    "osDisk": {
                                        "encryptionSettings": {
                                            "diskEncryptionKey": {
                                                "sourceVault": {
                                                    "id": "[variables('source').encryptionSettings.bekKeyVault]"
                                                },
                                                "secretUrl": "[reference(concat(parameters('deploymentContext').parentTemplateUniqueString, '-', variables('source').name, '-ref-', variables('templateUniqueString')).outputs.bekUrl.value]"
                                            },
                                            "keyEncryptionKey": {
                                                "sourceVault": {
                                                    "id": "[variables('source').encryptionSettings.kekKeyVault]"
                                                },
                                                "keyUrl": "[variables('source').encryptionSettings.kekUrl]"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    ]
                }
            }
        }
    ]
}